@model Notes.Models.Service
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Service", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id)
    <div class="container">

        <hr />

        <div class="form-group">
            <p>Title</p>
            <div>
                @Html.TextAreaFor(model => model.ServiceName, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <p>Body</p>
            <div>
               
                @Html.TextBoxFor(model => model.CreatedBy, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextBoxFor(model => model.IsActive, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success" style=" width: 17%; display: block; margin: auto" />
        </div>

    </div>
}

